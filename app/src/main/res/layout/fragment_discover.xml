<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffebebeb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/action_check_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_item_padding"
            android:layout_marginTop="@dimen/menu_item_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="签到"
            android:textColor="#ff333333"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider_width"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_item_padding"
            android:layout_marginTop="@dimen/menu_item_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="成绩"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider_width"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_item_padding"
            android:layout_marginTop="@dimen/menu_item_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="课表"
            android:textColor="#ff333333"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="图书馆"
        android:textColor="#666666"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/action_book"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_item_padding"
            android:layout_marginTop="@dimen/menu_item_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="我的图书"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider_width"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/school_info_library"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_item_padding"
            android:layout_marginTop="@dimen/menu_item_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="图书馆馆藏图书查询"
            android:textColor="#ff333333"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="公共考试成绩查询"
        android:textColor="#666666"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/school_info_english"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_item_padding"
            android:layout_marginTop="@dimen/menu_item_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="英语四六级分数查询"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider_width"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/school_info_standard_chinese"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_item_padding"
            android:layout_marginTop="@dimen/menu_item_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="普通话水平测试分数查询"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider_width"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/school_info_computer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_item_padding"
            android:layout_marginTop="@dimen/menu_item_padding"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="全国计算机等级考试分数查询"
            android:textColor="#ff333333"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
