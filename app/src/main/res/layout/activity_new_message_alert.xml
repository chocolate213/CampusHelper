<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffebebeb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/menu_item_padding"
                    android:paddingTop="@dimen/menu_item_padding"
                    android:gravity="center_vertical"
                    android:text="@string/menu_text_recv_new_message"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/menu_item_text_size" />

            </LinearLayout>

            <Switch
                android:id="@+id/switch_recv_new_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textOn="@string/action_on"
                android:textOff="@string/action_off"
                android:clickable="true"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="@dimen/menu_item_padding"
                    android:gravity="center_vertical"
                    android:text="@string/menu_text_show_message_detail"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/menu_item_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6.0dp"
                    android:textSize="14sp"
                    android:textColor="#ff999999"
                    android:text="@string/menu_desc_new_message"/>
            </LinearLayout>

            <Switch
                android:id="@+id/switch_show_message_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textOn="@string/action_on"
                android:textOff="@string/action_off"
                android:clickable="true"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/menu_item_padding"
                    android:paddingTop="@dimen/menu_item_padding"
                    android:gravity="center_vertical"
                    android:text="@string/menu_text_sound"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/menu_item_text_size" />

            </LinearLayout>

            <Switch
                android:id="@+id/switch_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textOn="@string/action_on"
                android:textOff="@string/action_off"
                android:clickable="true"
                android:checked="false"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider_width"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/menu_item_padding"
                    android:paddingTop="@dimen/menu_item_padding"
                    android:gravity="center_vertical"
                    android:text="@string/menu_text_vibrator"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/menu_item_text_size" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_vibrator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textOn="@string/action_on"
                android:textOff="@string/action_off"
                android:clickable="true"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

